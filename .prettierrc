{
  "arrowParens": "always",
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxSingleQuote": false,
  "printWidth": 100,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": false,
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "jinja-template"
      }
    },
    {
      "files": ["*.md", "*.markdown"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "proseWrap": "preserve",
        "printWidth": 100
      }
    }
  ],
  "plugins": ["prettier-plugin-jinja-template"]
}
